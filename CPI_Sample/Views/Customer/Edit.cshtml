@using System.Web.UI.WebControls
@model CPI_Sample.Models.Customer

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Customer</legend>

        @Html.HiddenFor(model => model.customerId)
        
        <div class="editor-label">
            Account Rep
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.repId)
            @Html.ValidationMessageFor(model => model.repId)
        </div>

        <div class="editor-label">
            Account Number
        </div>  
        <div class="editor-field">
            @Html.EditorFor(model => model.customerAccountNumber)
            @Html.ValidationMessageFor(model => model.customerAccountNumber)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
